<!DOCTYPE html> 
<html> 
<head> 
  <title><%= Setting.app_name %> - <%=t(:background)%></title> 
	<meta http-equiv="Content-type" content="text/html; charset=utf-8" /> 
  <%= stylesheet_link_tag "application","cpanel","wice_grid", :cache => "cached_cpanel" %>
  <%= javascript_include_tag "jquery.min","rails","wice_grid", :cache => "cached_cpanel" %>
  <%= csrf_meta_tag %>
</head> 
<body> 
  <div id="header">
    <div class="container">
      <table> 
        <tr> 
          <td id="app_name"> 
            <%=t(:console)%> <a href="<%= root_path %>" class="out"><%=t(:back_to_front)%></a> 
          </td>          
          <td id="nav">
            <a href="<%= cpanel_notices_path %>"><%=t(:notice)%></a> |
            <a href="<%= cpanel_users_path %>"><%=t(:users)%></a> |
            <a href="<%= cpanel_asks_path %>"><%=t(:problem)%></a> |
            <a href="<%= cpanel_answers_path %>">回答</a> |
            <a href="<%= cpanel_topics_path %>"><%=t(:topic)%></a> |
            <a href="<%= cpanel_comments_path %>">评论</a> |
            <a href="<%= cpanel_report_spams_path %>"><%=t(:report)%></a>
          </td>
					<td id="user_bar"> 
            <% if current_user %>
            <%=t(:hello)%> <strong><%= current_user.name %></strong>  <a href="<%= logout_path %>"><%=t(:logout)%></a> 
						<% end %>
          </td> 
				</tr> 
			</table> 
	  </div> 
  </div> 
  <div id="sitemap"> 
    <div class="container">
		 <%=t(:navigation)%>: <a href="<%= cpanel_root_path %>"><%=t(:console)%></a> &gt; <%= yield :sitemap %>
   </div>
	</div> 
  <div id="main">
    <div class="container">
      <% if !notice.blank? %>
        <div class="notice_message"><%= notice %></div>
        <script type="text/javascript">
          $(".notice_message").fadeOut().fadeIn();    
        </script>
      <% end %>
      <% if !alert.blank? %>
        <div class="alert_message"><%= alert %></div>
        <script type="text/javascript">
          $(".alert_message").fadeOut().fadeIn();    
        </script>
      <% end %> 
      <%= yield %>
		</div> 
  </div> 
  <div id="footer" class="container"> 
    <div class="container">
      <%= raw Setting.foot_html %>
    </div>
  </div> 
</body> 
</html> 
