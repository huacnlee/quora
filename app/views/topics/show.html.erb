<%= content_for :scripts do %>
  <%= javascript_include_tag("topics", :cache => "cached_topics") %>
  <script type="text/javascript">
    var current_page = 2;
    var topic_id = "<%= @topic.id %>";
    function loadAsks(){
      App.loading();
      $.get("<%= topic_path(params[:name]) %>?page="+current_page,function(){
          App.loading(false);
      });
      return false;
    }

  </script>
<% end %>
<div id="topic" class="clearfix">
  <div class="cover topic_cover">
    <%= image_tag(@topic.cover.normal.url) %>
    <div class="edit"><a href="#"><%=t(:edit_image)%></a></div>
  </div>
  <div id="edit_topic_cover" style="display:none">
    <h2><%=t(:modify_the_topic_image)%></h2>
    <%= simple_form_for(@topic,:class => "form",:html => { :multipart =>  true, :onsubmit => "App.loading();" }) do |f| %>
      <%= f.input :cover, :label => "#{t(:local_upload)}",:hint => "#{t(:support)} jpg, gif, png #{t(:picture_format)}，#{t(:do_not_exceed)} 2MB。#{t(:recommended_image_size_is_larger_than)} 100×100。" %>
      <div class="actions">
        <button type="submit"><%=t(:upload)%></button>
        <a href="#" onclick="$.facebox.close(); return false;"><%=t(:close)%></a>
      </div>
    <% end %>
  </div>
  <script type='text/javascript'>Topics.editCover($("#topic .cover"));</script>
  <div class="info">
    <h1><%= @topic.name %></h1>
    <div class="summary">
      <span id="topic_summary"><%= md_body @topic.summary  %></span>
      <% if @topic.summary.blank? %>
        <%= in_place_edit_tag @topic, :summary, :type => :textarea, :text_id => "topic_summary",:label => "#{t(:add_additional_information)}" %>
      <% else %>
        <%= in_place_edit_tag @topic, :summary, :type => :textarea, :text_id => "topic_summary" %>
      <% end %>
    </div>
  </div>
</div>
<br>
<div id="asks" style="claer:both;">
  <% @asks.each do |item| %>
    <%= render "asks/ask", :item => item %>
  <% end %>
  <% if @asks.length == @per_page %>
    <div class="pagination"><a class="page_more" href="#" onclick="return loadAsks();"><%=t(:see_more)%>...</a></div>
  <% end %>
</div>

<% content_for :sidebar do %>
  <% if current_user %>
    <div class="box">
      <div class="inner">
				<% if current_user.topic_followed?(@topic) %>
				<a href="#" class="gray_button" onclick="return Topics.unfollow(this, '<%= @topic.name %>','');"><%=t(:cancel_concern)%></a>
				<% else %>
        <a href="#" class="gray_button green_button" onclick="return Topics.follow(this, '<%= @topic.name %>','');">关注</a>
				<% end %>
      </div>
		</div>
	<% end %>

		<div class="box standard gray">
			<h2><%=t(:people_concerned_about_this_topic_recently)%></h2>
			<div class="inner">
				<div class="followers">
					<% for follower in @topic.followers.desc("$natural").limit(40) %>
					<a href="/users/<%= follower.slug %>" title="<%= follower.name %>">
						<%= user_avatar_tag(follower, :small) %>
					</a>
					<% end %>
				</div>
			</div>
    </div>
<% end %>
