<li>
  <div class="mute">
    <a href="#" rel="tipsyt" title="#{t(:not_interested)}" onclick="return Users.mute_suggest_item(this,'Topic','<%= topic.id %>');"></a>
  </div>
  <div class="info clearfix">
    <div class="item">
      <div class="left">
        <%= topic_cover_tag(topic,:small) %>
      </div>
      <div class="right">
        <%= topic_name_tag(topic, :prefix => "#") %>
